#include "my_malloc.h"

static void     *start = NULL;
static void     *end = NULL;

void    *malloc(size_t size)
{
  void  *ptr;
  if (start == NULL)
    {
      start = sbrk(0);
      sbrk(getpagesize());
      ((t_metadata *)start)->_allocSize = getpagesize();
      ((t_metadata *)start)->_used = 0;
      end = sbrk(0);
    }
